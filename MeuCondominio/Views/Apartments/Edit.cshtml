@model MeuCondominio.Models.ViewModels.ApartmentFormViewModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Apartamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Apartment.Id" />
            <div class="form-group">
                <label asp-for="Apartment.Number" class="control-label"></label>
                <input asp-for="Apartment.Number" class="form-control" />
                <span asp-validation-for="Apartment.Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apartment.Floor" class="control-label"></label>
                <input asp-for="Apartment.Floor" class="form-control" />
                <span asp-validation-for="Apartment.Floor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apartment.BuildingId" class="control-label"></label>
                <select asp-for="Apartment.BuildingId" class="form-control" asp-items="@(new SelectList(Model.Buildings, "Id", "Name"))"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
