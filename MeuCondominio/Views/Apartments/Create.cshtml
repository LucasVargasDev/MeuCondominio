@model MeuCondominio.Models.ViewModels.ApartmentFormViewModel

@{
    ViewData["Title"] = "Adicionar";
}

<h1>Adicionar</h1>

<h4>Apartamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Apartment.Number" class="control-label"></label>
                <input asp-for="Apartment.Number" class="form-control" />
                <span asp-validation-for="Apartment.Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apartment.Floor" class="control-label"></label>
                <input asp-for="Apartment.Floor" class="form-control" />
                <span asp-validation-for="Apartment.Floor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apartment.Building" class="control-label"></label>
                <select asp-for="Apartment.BuildingId" class="form-control" asp-items="@(new SelectList(Model.Buildings, "Id", "Name"))">
                    <option value="">Selecione um Prédio</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
