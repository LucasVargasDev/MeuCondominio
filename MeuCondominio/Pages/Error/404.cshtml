@page
@model MeuCondominio.Pages.Error._404Model
@{
    ViewData["Title"] = "Página não encontrada";
    Layout = "_Layout";
}

<section class="section py-4">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header text-center">Ops. Página não encontrada</div>
                    <div class="card-body">
                        <h3 class="card-title">Desculpe, a página que você está procurando nao foi encontrada.</h3>
                        <p class="card-text">Verifique se digitou corretamente o endereço ou retorne a página inicial.</p>
                        <div class="text-center">
                            <a href="/" class="btn btn-primary">Página inicial</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>